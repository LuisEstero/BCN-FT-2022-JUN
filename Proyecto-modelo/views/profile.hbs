<h1>Welcome {{user.username}}</h1>
 <div class='row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5'>
  
    {{#each user.favorites}}
    <div class='col'>
      <div class='card shadow-sm'>
        <img src="{{image}}" alt="">
        <p>{{name}}</p>
        <p>{{nationality}}</p>
        <form action = "/ciclista/delete-favorite/{{_id}}" method="POST">

          <button type="submit">Delete Favourites</button>
        </form>
      </div>
    </div>
    {{/each}}    
  </div>