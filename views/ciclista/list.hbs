


<div class='container backImg'> 

  <h1 class="lista">Cyclists</h1>

  <div class='row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5'>
  {{!-- image name status --}}
    {{#each ciclista}}
    <div class='col'>
      <div class='sm'>
        <div class="box-image">
          <img src="{{image}}"  class="card-img-top" alt="">
        </div>
        <div class="bg-details">
          <p class="alinear">Nombre:{{name}}</p>
          <p class="alinear">{{nationality}}</p>
          <p class="alinear">{{team}}</p>
        </div>
        <form class="container-button" action = "/ciclista/add-favorite/{{_id}}" method="POST">
          <button class="boton-registro" type="submit">Add Favourites</button>
        </form>
      </div>
    </div>
    {{/each}}    
  </div>
</div>